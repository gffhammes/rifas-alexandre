model Users {
  id                 String      @id @default(cuid())
  createdAt          DateTime    @default(now()) @map(name: "created_at")
  name               String
  email              String
  phone              Int
  quotas             Quotas[]
}

model Raffles {
  id                String      @id @default(cuid())
  createdAt         DateTime    @default(now()) @map(name: "created_at")
  image             String
  name              String
  prize             String
  description       String
  ticketPrice       Float
  raffleDate        DateTime
  quotas            Quotas[]
}

model Quotas {
  id                String      @id @default(cuid())
  createdAt         DateTime    @default(now()) @map(name: "created_at")
  number            Int
  status            String
  raffle            Raffles?    @relation(fields: [raffleId], references: [id])
  raffleId          String?
  owner             Users?      @relation(fields: [ownerId], references: [id])
  ownerId           String?
}